<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 

            <TextView
                android:id="@+id/tv_ob_verify_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/onboard_text"
                android:textSize="@dimen/ob_large_text" />

            <TextView
                android:id="@+id/tv_ob_verify_full_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/verify_full_experience"
                android:textColor="@color/white"
                android:textSize="@dimen/ob_small_text" />

            <TextView
                android:id="@+id/tv_ob_verify_lower_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ob_small_text" />
    
</LinearLayout>
