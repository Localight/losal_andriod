<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:id="@+id/ll_notices"
    android:orientation="vertical" >

 
    <include
        android:id="@+id/actionbar_notices"
        layout="@layout/actionbar_notices_menu" />
    <!-- Ad to display -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA484848"
        android:orientation="vertical" >
        
        
           <ImageView
        android:id="@+id/iv_notices_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <!-- height should probably be set to wrap_content when launched -->
        
    </LinearLayout>

    <!-- Notices -->

    <ListView
        android:id="@+id/notices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>