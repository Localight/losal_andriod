<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_post_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/post_side_margin"
    android:layout_marginRight="@dimen/post_side_margin"
    android:layout_marginBottom="@dimen/post_top_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/time_break"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/time_break_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday, 12:00pm"
            android:textColor="@color/time_break" />

        <TextView
            android:id="@+id/time_break_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/time_break" />
    </LinearLayout>

    <!-- Post Header -->

    <LinearLayout
        android:id="@+id/post_header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <!--
             <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_launcher" />
        -->

        <TextView
            android:id="@+id/tv_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textSize="@dimen/post_user_icon_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/tv_time_posted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:alpha="0.6"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:alpha="0.6"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_class_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_social_like_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <!--
                 <LinearLayout
                android:id="@+id/ll_social_site_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            -->

            <ImageView
                android:id="@+id/iv_social_like_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/trans_white"
                android:gravity="right" />

            <ImageView
                android:id="@+id/iv_social_site_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:gravity="right"
                android:src="@drawable/ic_launcher" />

            <!-- </LinearLayout> -->
        </LinearLayout>
    </LinearLayout>

    <!-- Post Content -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_post_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/iv_post_image"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="radsf sd sdf asdf asdnfjk sadf asdfhasdf asdjfsadfkl sdfasdfasdf fdf sdf fd df "
            android:textAlignment="gravity"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>