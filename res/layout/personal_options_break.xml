<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/po_break_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/personal_options_break_left_right_margin"
    android:layout_marginRight="@dimen/personal_options_break_left_right_margin"
    android:layout_marginTop="@dimen/personal_options_break_top_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/po_break_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/personal_options_break_groupd_header_left_margin"
        android:text="@string/social_feed"
        android:textColor="@color/trans_white"
        android:textSize="@dimen/personal_options_text_size" />

    <LinearLayout
        android:id="@+id/po_break"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_options_break_height"
        android:layout_marginLeft="@dimen/personal_options_break_left_right_margin"
        android:layout_marginRight="@dimen/personal_options_break_left_right_margin"
        android:orientation="horizontal"
        android:weightSum="10" >

        <View
            android:layout_width="@dimen/personal_options_break_thickness"
            android:layout_height="match_parent"
            android:background="@color/trans_white" />

        <View
            android:layout_width="0dip"
            android:layout_height="@dimen/personal_options_break_thickness"
            android:layout_weight="10"
            android:background="@color/trans_white" />

        <View
            android:layout_width="@dimen/personal_options_break_thickness"
            android:layout_height="match_parent"
            android:background="@color/trans_white" />
    </LinearLayout>

</LinearLayout>