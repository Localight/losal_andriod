<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_verify_error"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="25dp"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Oops did you miss the app registration? Your number wan&apos;t recognized."
            android:textColor="@color/white"
            android:textSize="@dimen/ob_small_text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
        <TextView
            android:id="@+id/tv_verify_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Email us"
            android:textColor="@color/white"
            android:textSize="@dimen/ob_small_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" for access or retry"
            android:textColor="@color/white"
            android:textSize="@dimen/ob_small_text" />
</LinearLayout>
      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="below."
            android:textColor="@color/white"
            android:textSize="@dimen/ob_small_text" />
        <TextView
            android:id="@+id/tv_ob_verify_full_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enter_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/ob_small_text" />
    </LinearLayout>

</LinearLayout>