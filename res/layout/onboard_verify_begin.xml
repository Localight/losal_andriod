<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_verify_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/verify_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ob_verify_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/verify_start"
                android:textColor="@color/onboard_text"
                android:textSize="@dimen/ob_large_text" />

            <TextView
                android:id="@+id/tv_ob_verify_full_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/verify_full_experience"
                android:textColor="@color/white"
                android:textSize="@dimen/ob_small_text" />

            <TextView
                android:id="@+id/tv_ob_verify_lower_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/ob_small_text" />
        </LinearLayout>
</LinearLayout>