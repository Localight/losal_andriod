<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ab_po"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_po_height"
    android:background="@color/black"
    android:gravity="left"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_ab_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:text="e"
        android:textSize="@dimen/actionbar_po_user_icon" />

    <TextView
        android:id="@+id/tv_ab_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/actionbar_po_user_name" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_po_height"
        android:background="@color/black"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_ab_settings"
            android:layout_width="@dimen/actionbar_po_settings_size"
            android:layout_height="@dimen/actionbar_po_settings_size"
            android:scaleType="centerCrop"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>

</LinearLayout>