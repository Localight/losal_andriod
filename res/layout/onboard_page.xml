<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ob_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/onboard_text"
        android:text="" />

    <TextView
        android:id="@+id/ob_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ob_title"
                android:textColor="@color/onboard_text"
        
        android:layout_centerHorizontal="true"
        android:text="" />

    <TextView
        android:id="@+id/ob_subtitle_2"
        android:layout_width="wrap_content"
                android:textColor="@color/onboard_text"
        
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
                android:layout_below="@+id/ob_subtitle"
        
        android:text="" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/screens1_android" />

</RelativeLayout>