<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notice_list_item_height"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_image"
            android:layout_margin="@dimen/notice_list_item_image_margin"
            android:layout_width="@dimen/notice_list_item_image_size"
            android:layout_height="@dimen/notice_list_item_image_size"
            android:src="@drawable/com_facebook_profile_picture_blank_square" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Losal Zombie Contest"
                android:textSize="@dimen/notice_list_item_title_size" />

            <TextView
                android:id="@+id/tv_notice_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="enter your coolest zombie costume and you could be a winner. Isn't that great!"
                android:textSize="@dimen/notice_list_item_details_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>